@model IEnumerable<COV19MK.Data.Entities.Patients>
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create new patient</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DateOfBirth)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Gender)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateOfInfection)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CauseOfInfection)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateOfRecuperation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateOfDeath)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.DateOfBirth)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Gender)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateOfInfection)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateOfRecuperation)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateOfDeath)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
